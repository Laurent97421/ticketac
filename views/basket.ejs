 <%- include('header') %>
  <body>
    <div>
      <h1>My tickets</h1>
      <div class="contrainer-fluid">
        <div class="row">
          <table class="table table-dark table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Journey</th>
                <th scope="col">Date</th>
                <th scope="col">Departure time</th>
                <th scope="col">Price</th>
              </tr>
            </thead>
            <tbody>
                 <%for (let i =0; i<journey.length; i++) { %> 
              <tr>
                <th scope="row">1</th>
                <td><%=journey[i].departure%> - <%=journey[i].arrival%></td>
                <td><%=journey[i].date%></td>
                <td><%=journey[i].time %> </td>
                <td><%=journey[i].price%>â‚¬</td>
              </tr>
               <% }  %> 
              <tr>
                <th scope="total">Total</th>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
            
            </tbody>
          </table>
        </div>

        <div class="row">
          <div class="col-12 text-right">
            <form action="/create-checkout-session" method="POST">
              <button
                class="btn btn-outline-info btn-sm btn-checkout"
                name="button-checkout"
                type="submit"
              >
                Confirm
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
