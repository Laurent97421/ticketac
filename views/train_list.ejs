<body id="trainlist-page">

    <%- include('header'); %>

    <p id="ticket-available-text">Ticket available on <%= date %> : </p>

    <div class="train-list-div">

        <% for(var i = 0; i < journeyList.length; i++) {%> 
        <ul class="ul-train-list">
            <li class="li-train-list">
                <div class="train-list-card">
                    <div class="infotrain-div">
                        <div><%= journeyList[i].departure%></div>
                        <div><i class="fa-solid fa-circle-arrow-right"></i></div>
                        <div><%= journeyList[i].arrival%></div>
                        <div><%= journeyList[i].departureTime %></div>
                        <div><%= journeyList[i].price %>â‚¬</div>
                        <div><a href="/basket" id="btn-buy"><button type="submit" class="btn-buy">Buy</button></a></div>
                    </div>
                </div>
            </li>
        </ul>
        <% } %>

    </div>

</body>
</html>